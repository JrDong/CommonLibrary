<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--自定义环形图属性-->
    <declare-styleable name="CircleView">
        <attr name="circlePadding" format="dimension" />
        <attr name="circleWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="topTextSize" format="dimension" />
        <attr name="targetTextSize" format="dimension" />
        <attr name="backCircleColor" format="color|reference" />
        <attr name="stepTextColor" format="color|reference" />
        <attr name="TopTextColor" format="color|reference" />
        <attr name="targetTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="HexagonView">
        <attr name="sideLength" format="dimension" />
        <attr name="sideWidth" format="dimension" />
        <attr name="baseColor" format="color|reference" />
        <attr name="hexTextSize" format="dimension" />
        <attr name="hexTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="TwinkleHeadView">
        <attr name="twinkle_head_size" format="dimension"/>
        <attr name="twinkle_color" format="color|reference"/>
        <attr name="twinkle_end_color" format="color|reference"/>
        <attr name="twinkle_circle_width" format="dimension"/>
    </declare-styleable>
</resources>
